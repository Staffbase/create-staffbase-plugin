{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./dist/",
    "rootDir": "./",

    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "sourceMap": true,
    "pretty": true,
    "strict": true,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "strictNullChecks": true
  },
  "files": [
    "./types/custom.d.ts"
  ],
  "include": [
    "./**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist/**/*"
  ]
}
